<div id="timeline-header">
  
  <div class="alert alert-class" id="project-status-alert" style="margin-bottom: 5px; display:none">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p id='project-status-alert-text'></p>
</div>

  <% if @in_author_view %>
    <input type="button" class="btn" id="addTimeBtn" value="Add Time" onclick="addTime()">
    <div class="clear"></div>

    <!-- render partial with confirm action alert --> 
    <%= render :partial => "confirm_action" %>
  <% end %>

</div>

<div class="overlay" id="overlay" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
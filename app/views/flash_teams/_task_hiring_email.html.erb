<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>Foundry Hiring Portal</title>

    <!-- Bootstrap core CSS -->
    <%= stylesheet_link_tag    "panel-css/panel-bootstrap"%>

    <!--external css-->
    <%= stylesheet_link_tag    "panel-css/font-awesome"%>

    <!-- Custom styles for this template -->
    <%= stylesheet_link_tag    "panel-css/panel-style"%>
    <%= stylesheet_link_tag    "panel-css/panel-style-responsive"%>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

  <section id="container" >
      <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
      <!--header start-->
      <header class="header black-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <!--logo start-->
            <a href="index.html" class="logo"><b>FOUNDRY HIRING PORTAL</b></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                    <!-- settings start -->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
                            <i class="fa fa-tasks"></i>
                            <!-- <span class="badge bg-theme">4</span> -->
                        </a>
                        <ul class="dropdown-menu extended tasks-bar">
                            <div class="notify-arrow notify-arrow-green"></div>
                            <li>
                                <p class="green">View Other Tasks in the Project</p>
                            </li>
                            
						<%i = 0%>
						<%@flash_team_json['events'].each do |event|%>
 							<li class="external">
 								<%=link_to event["title"], :controller => "flash_teams", :action => "hire_form", :event_id => i %>
                            </li>
						<%i+= 1%>
						<% end %>
                </ul>
                    </li>
                    <!-- settings end -->
                    <!-- inbox dropdown start-->
                    <li id="header_inbox_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
                            <i class="fa fa-envelope-o"></i>
                            <!-- <span class="badge bg-theme">5</span> -->
                        </a>
                        <ul class="dropdown-menu extended inbox">
                            <div class="notify-arrow notify-arrow-green"></div>
                            <li>
                                <p class="green">Hiring Emails</p>
                            </li>
                            
                            <li><%=link_to "Task Available", controller: "flash_teams", action: "hire_form"%> </li>
							<li><%=link_to "Task Acceptance", controller: "flash_teams", action: "task_acceptance"%></li>
							<li><%=link_to "Task Unavailable", controller: "flash_teams", action: "task_rejection"%></li>
                      </ul>
                    </li>
                    <!-- inbox dropdown end -->
                </ul>
                <!--  notification end -->
            </div>
            <div class="top-menu">
            	<ul class="nav pull-right top-menu">
	            	<li><%=link_to "Back to Foundry", edit_flash_team_path, :class=> "logout"%></li>
                    <!-- <li><a class="logout" href="login.html">Logout</a></li> -->
            	</ul>
            </div>
        </header>
      <!--header end-->
      
      <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu" id="nav-accordion">

              	  <h5 style="padding-top: 15px; margin-left:10px; padding-left: 10px;">Project: <%=@flash_team_json["title"]%></h5>
              	  	     
                   <li class="mt">
                   
                   <%= link_to raw('<i class="fa fa-th"></i><span>Edit Panels</span>'), controller: "flash_teams", action: "panels" %> 			
                          
                  </li>
                  

                  <li class="sub-menu">
                      <a href="javascript:;" >
	                      <i class="fa fa-envelope-o"></i>
                          <!-- <i class="fa fa-desktop"></i> -->
                          <span>Hiring Emails</span>
                      </a>
                      <ul class="sub">
                          <li><%=link_to "Task Available", controller: "flash_teams", action: "hire_form"%> </li>
                          <li><%=link_to "Task Acceptance", controller: "flash_teams", action: "task_acceptance"%></li>
                          <li><%=link_to "Task Unavailable", controller: "flash_teams", action: "task_rejection"%></li>
                      </ul>
                  </li>

                  <li class="sub-menu">
                      <a href="javascript:;" >
                          <!-- <i class="fa fa-cogs"></i> -->
                          <i class="fa fa-tasks"></i>
                          <span>View Other Tasks</span>
                      </a>
                      <ul class="sub">
                          <%i = 0%>
                          <%@flash_team_json['events'].each do |event|%>
							<li><%=link_to event["title"], :controller => "flash_teams", :action => "hire_form", :event_id => i %></li>
							<%i+= 1%>
						<% end %>
                      </ul>
                  </li>

              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->
      
      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
          	          	
          		<%= yield %>
          	
		</section><! --/wrapper -->
      </section><!-- /MAIN CONTENT -->

      <!--main content end-->
      <!--footer start-->
      <footer class="site-footer">
          <div class="text-center">
              2014 - Stanford HCI Group - Template adapted from Alvarez.is
              <a href="#" class="go-top">
                  <i class="fa fa-angle-up"></i>
              </a>
          </div>
      </footer>
      <!--footer end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "/assets/jquery" %>
    
    <%= javascript_include_tag "/assets/panel-assets/js/jquery.dcjqaccordion.2.7" %>
    
    <%= javascript_include_tag "/assets/panel-assets/js/jquery.scrollTo.min" %>
    <%= javascript_include_tag "/assets/panel-assets/js/jquery.nicescroll" %>
    <%= javascript_include_tag "/assets/panel-assets/js/jquery.tagsinput" %>
    <%= javascript_include_tag "/assets/panel-assets/js/bootstrap.min" %>

    <%= javascript_include_tag "/assets/panel-assets/js/common-scripts" %>

	<%= javascript_include_tag "/assets/panel-assets/js/form-component" %>
  
	<%= javascript_include_tag "/assets/jquery_ujs" %>


  </body>
</html>

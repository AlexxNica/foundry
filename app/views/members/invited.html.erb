<%= form_tag("/members/#{@id}/register", method: "post") do %>
  <%= label_tag(:name, "Your name:") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:email, "Your email (please use the same email address that you used to register on Foundry:") %>
  <%= text_field_tag(:email) %>
  <%= hidden_field_tag(:uniq, @uniq) %>
  <%= submit_tag("Submit") %>
<% end %>
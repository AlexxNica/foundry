<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta http-equiv="refresh" content="60">

    <title>Foundry Hiring Portal</title>

    <!-- Bootstrap core CSS -->
    <%= stylesheet_link_tag    "application"%>
    <%= stylesheet_link_tag    "hiring-panel"%>
    <%= stylesheet_link_tag    "font-awesome"%>


  </head>

  <body>

  <section id="container" >
      <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
      <!--header start-->
	  <header class="header black-bg">
              <!--
			  <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
				-->
              
            <!--logo start-->
            <!-- <p class="logo"><b>FOUNDRY HIRING PORTAL</b></p> -->
            <a href="#" class="logo"><b>FOUNDRY HIRING PORTAL</b></a>
            
            <!--logo end-->
        </header>
      <!--header end-->
      
      <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
      <!--sidebar start-->
      <aside>
          <!-- div class="span3" id="sidebar"> -->
              <!-- sidebar menu start-->
              <!-- <ul class="sidebar-nav"> -->
              
              <!-- <div class="span3" id="sidebar"> -->
              <!-- sidebar menu start-->
             <!--  <ul class="sidebar-menu"> -->
	              
	        <div id="sidebar"  class="span3 nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu" id="nav-accordion">

              	  <h5 class="project-name">Project: <%=@flash_team_json["title"]%></h5>
              	   <h6 class="task-name">Task: <%=@flash_team_event["title"]%></h6>
                   
                <% if @queuePosition == 1 %>

                   <h6 class="task-name">Position in Queue: No. <%=@queuePosition%></h6>
                   <h6 class="task-name">Deadline to Accept Position: <br /> <%=@wait_time%> </h6>
                   
                   <h6 class="task-name">
                      <%= link_to("Accept this position", @invitationLink, :class => 'btn btn-success') %>
                   </h6>

                   <h6 class="task-name">
                      <%=link_to "Decline this position", @removalURL, :class => 'btn btn-default', :data=>{:confirm=>"Are you sure you want to be removed from the hiring queue?"}%>
                   </h6>

                   <!-- <h6 class="task-name">
                      <%=link_to "Accept Position", @invitationLink%>
                   </h6>

                   <h6 class="task-name">
                      <%=link_to "Decline Position", @removalURL, :data=>{:confirm=>"Are you sure you want to be removed from the hiring queue?"}%>
                   </h6> -->
                <% end %>

                 <% if @queuePosition >1 %>

                   <h6 class="task-name">Position in Queue: No. <%=@queuePosition%></h6>
                   <h6 class="task-name">Wait Time Remaining: <br /><%=@wait_time%> </h6>

                   <h6 class="task-name">
                      <%=link_to "Decline Position & Remove from Hiring Queue", @removalURL, :data=>{:confirm=>"Are you sure you want to be removed from the hiring queue?"}%>
                   </h6>
                <% end %>
              	 	     
                

              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->
      
      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
          	          	
          		<%= yield %>
          	
		</section><! --/wrapper -->
      </section><!-- /MAIN CONTENT -->

      <!--main content end-->
      <!--footer start-->
      <footer class="site-footer">
          <div class="text-center">
              2015 - Stanford HCI Group
              <a href="#" class="go-top">
                  <i class="fa fa-angle-up"></i>
              </a>
          </div>
      </footer>
      <!--footer end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
	<%= javascript_include_tag "/assets/jquery" %>
	<%= javascript_include_tag "/assets/jquery_ujs" %>
	<%= javascript_include_tag "bootstrap/bootstrap.min" %>
	<%= javascript_include_tag "/assets/jquery.dcjqaccordion.2.7" %>



  </body>
</html>
